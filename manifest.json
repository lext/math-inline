{
  "manifest_version": 3,
  "name": "Mathinline",
  "version": "1.0",
  "description": "An extension that helps one to wrap text into inline LaTeX math. ",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.overleaf.com/*", "https://overleaf.com/*"],
      "js": ["content-inject-all.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
